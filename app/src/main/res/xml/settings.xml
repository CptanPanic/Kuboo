<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- SERVER -->
    <android.support.v7.preference.PreferenceCategory
        android:key="category_server"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_server">
        <android.support.v7.preference.Preference
            android:key="settings_server_login"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_active_server"/>
    </android.support.v7.preference.PreferenceCategory>

    <!-- BROWSER -->
    <android.support.v7.preference.PreferenceCategory
        android:key="category_browser"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_browser">
        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="settings_browser_mark_finished"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_finished_items_will_be_darkened"
            android:title="@string/settings_mark_finished"/>
        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="settings_browser_favorite"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_show_favorite_buttons"
            android:title="@string/settings_favorite"/>
        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="settings_browser_reverse_layout"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_content_starts_from_the_bottom_towards_top"
            android:title="@string/settings_reverse_layout"/>
        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="settings_browser_preview"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_show_preview_page_before_reading"
            android:title="@string/settings_preview"/>
    </android.support.v7.preference.PreferenceCategory>

    <!-- EPUB -->
    <android.support.v7.preference.PreferenceCategory
        android:key="category_epub"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_epub">
        <android.support.v7.preference.Preference
            android:key="settings_epub_text_zoom"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_text_zoom"/>
        <android.support.v7.preference.Preference
            android:key="settings_epub_margin"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_margin"/>
    </android.support.v7.preference.PreferenceCategory>

    <!-- COMIC -->
    <android.support.v7.preference.PreferenceCategory
        android:key="category_comic"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_comic">
        <android.support.v7.preference.Preference
            android:key="settings_comic_scale_type"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_scale_type"/>
        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="settings_comic_dual_pane"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_read_two_pages_simultaneously_in_landscape_mode"
            android:title="@string/settings_dual_pane_mode"/>
        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="settings_comic_rtl"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_reverse_reading_order"
            android:title="@string/settings_manga_mode"/>
    </android.support.v7.preference.PreferenceCategory>

    <!-- DOWNLOAD -->
    <android.support.v7.preference.PreferenceCategory
        android:key="category_download"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_download">
        <android.support.v7.preference.Preference
            android:key="settings_download_save_path"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_save_path"/>
        <android.support.v7.preference.Preference
            android:key="settings_download_tracking_limit"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_tracking_limit"/>
        <android.support.v7.preference.Preference
            android:key="settings_download_tracking_interval"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_tracking_interval"/>
    </android.support.v7.preference.PreferenceCategory>

    <!-- SYSTEM -->
    <android.support.v7.preference.PreferenceCategory
        android:key="category_system"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_system">
        <android.support.v7.preference.Preference
            android:key="settings_system_theme"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_theme"/>
        <android.support.v7.preference.Preference
            android:key="settings_system_orientation"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_orientation"/>
    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>