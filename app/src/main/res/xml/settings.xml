<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- SERVER -->
    <androidx.preference.PreferenceCategory
        android:key="category_server"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_server">
        <androidx.preference.Preference
            android:key="settings_server_login"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_active_server"/>
    </androidx.preference.PreferenceCategory>

    <!-- HOME -->
    <androidx.preference.PreferenceCategory
        android:key="category_home"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_home">
        <androidx.preference.Preference
            android:key="settings_home_layout"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_layout"/>
    </androidx.preference.PreferenceCategory>

    <!-- BROWSER -->
    <androidx.preference.PreferenceCategory
        android:key="category_browser"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_browser">

        <androidx.preference.SwitchPreferenceCompat
            android:key="settings_browser_mark_finished"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_finished_items_will_be_darkened"
            android:title="@string/settings_mark_finished"/>
        <androidx.preference.SwitchPreferenceCompat
            android:key="settings_browser_favorite"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_show_favorite_buttons"
            android:title="@string/settings_favorite"/>
    </androidx.preference.PreferenceCategory>

    <!-- DOWNLOAD -->
    <androidx.preference.PreferenceCategory
        android:key="category_download"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_download">
        <androidx.preference.Preference
            android:key="settings_download_save_path"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_save_path"/>
        <androidx.preference.Preference
            android:key="settings_download_tracking_limit"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_tracking_limit"/>
        <androidx.preference.Preference
            android:key="settings_download_tracking_interval"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_tracking_interval"/>
        <androidx.preference.SwitchPreferenceCompat
            android:key="settings_download_tracking_hide_finished"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_hide_tracking_series_that_have_been_fully_read_and_have_no_further_content_available"
            android:title="@string/settings_tracking_hide_finished"/>
        <androidx.preference.SwitchPreferenceCompat
            android:key="settings_download_show_finished_notification"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_show_a_notification_after_downloads_are_finished"
            android:title="@string/settings_finished_notification"/>
    </androidx.preference.PreferenceCategory>

    <!-- READER -->
    <androidx.preference.PreferenceCategory
        android:key="category_reader"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_reader">
        <androidx.preference.SwitchPreferenceCompat
            android:key="settings_volume_page_turn"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_volume_buttons_will_turn_page"
            android:title="@string/settings_volume_page_turn"/>
        <androidx.preference.SwitchPreferenceCompat
            android:key="settings_keep_screen_on"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_reader_screen_will_keep_the_device_awake"
            android:title="@string/settings_keep_screen_on"/>
    </androidx.preference.PreferenceCategory>

    <!-- SYSTEM -->
    <androidx.preference.PreferenceCategory
        android:key="category_system"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_system">
        <androidx.preference.Preference
            android:key="settings_start_tab"
            android:layout="@layout/settings_item_preference_normal"
            android:title="Start Tab"/>
        <androidx.preference.Preference
            android:key="settings_system_theme"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_theme"/>
        <androidx.preference.Preference
            android:key="settings_system_orientation"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_orientation"/>
        <androidx.preference.SwitchPreferenceCompat
            android:key="settings_disable_cellular"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_protect_your_mobile_data_limit"
            android:title="@string/settings_disable_cellular"/>
    </androidx.preference.PreferenceCategory>

    <!-- ADVANCED -->
    <androidx.preference.PreferenceCategory
        android:key="category_advanced"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_advanced">
        <androidx.preference.Preference
            android:key="settings_advanced"
            android:layout="@layout/settings_item_preference_normal"
            android:summary="@string/settings_more_advanced_options"
            android:title="@string/settings_advanced"/>
    </androidx.preference.PreferenceCategory>

    <!-- ABOUT -->
    <androidx.preference.PreferenceCategory
        android:key="category_about"
        android:layout="@layout/settings_item_category"
        android:title="@string/settings_about">
        <androidx.preference.Preference
            android:key="settings_about_version"
            android:layout="@layout/settings_item_preference_normal"
            android:title="@string/settings_version"/>
    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>