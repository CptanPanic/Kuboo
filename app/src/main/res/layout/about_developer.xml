<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_teal_400"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/about_developer_imageView"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/about_developer_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_developer_imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/about_developer_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_developer_textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="@string/about_developer_email"
            android:textColor="@android:color/white"
            android:textColorLink="@color/md_blue_900"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/about_developer_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_developer_textView2"
            android:layout_margin="16dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</ScrollView>